<!DOCTYPE html>
<html ng-app="bookApp">
  	<head>
    	<title>左图右书</title>
    	<link rel="shorticon icon" type="image/x-icon" href="/images/favicon.png" /> 
    	<link rel="stylesheet" href="/bootstrap/dist/css/bootstrap.min.css">
    	<link rel="stylesheet" href="/bootstrap/dist/css/bootstrap-theme.min.css">
    	<link rel="stylesheet" href="/stylesheets/base.css">
    	<link rel="stylesheet" href="/stylesheets/app.css">
    	<script src="/angular/angular.min.js"></script>
    	<script src="/angular-ui-router/build/angular-ui-router.min.js"></script>
    	<script src="/jquery/dist/jquery.min.js"></script>
    	<script src="/bootstrap/dist/js/bootstrap.min.js"></script>
    	<script src="/libs/echarts/echarts.js"></script>
    	<script src="/javascripts/bookApp.js"></script>
    	<script src="/javascripts/controllers.js"></script>
    	<script src="/javascripts/services.js"></script>
  	</head>

  	<body>
    	<div class="view-container">
	        <nav class="navbar navbar-inverse navbar-fixed-top ztys-navbar">
	            <div class="container-fluid">
	                <div class="navbar-header">
	                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" 
	                            data-target="#navbar" aria-expanded="false" 
	                            aria-controls="navbar" id="ztysMenuCollapsed">
	                        <span class="sr-only">Toggle navigation</span>
	                        <span class="icon-bar"></span>
	                        <span class="icon-bar"></span>
	                        <span class="icon-bar"></span>
	                    </button>
	                    <span class="navbar-brand">
	                        <div class="ztys-logo-wrapper pull-left">
	                            <img src="images/icon_logo.png">
	                        </div>
	                        <h1 class="ztys-system-title">左图右书</h1>
	                    </span>
	                </div>
	                <div id="navbar" class="navbar-collapse collapse" ng-controller="NavController">
	                    <ul class="nav navbar-nav" id="ztysMenu">
	                        <li ng-class="{active: $state.includes('books')}"><a href="/#/books">所有藏书</a></li>
	                        <li ng-class="{active: $state.includes('create')}" ng-show="isLoggedIn()">
	                        	<a href="/#/create">录入新书</a>
	                        </li>
	                        <li ng-class="{active: $state.includes('statistics')}"><a href="/#/statistics">统计</a></li>
	                    </ul>
	                    <ul class="nav navbar-nav navbar-right">
	                    	<li class="dropdown" ng-show="isLoggedIn()">
          						<a class="dropdown-toggle f14" data-toggle="dropdown" role="button">{{ currentUser() }} <span class="caret"></span></a>
      							<ul class="dropdown-menu f14" role="menu">
        							<li><a href="" ng-click="logOut()">退出</a></li>
      							</ul>
    						</li>
    						<li ng-hide="isLoggedIn()"><a href="/#/login">登录</a></li>
	                    </ul>
	                </div>
	            </div>
	        </nav>

	        <ui-view></ui-view>
	    </div>
  	</body>
</html>
